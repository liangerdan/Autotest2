[
  {
    "description": "模拟一个post请求",
    "request": {
      "uri": "/postdemo",
      "method": "post"
    },
    "response": {
      "text": "这是一个基于mock框架的post请求",
      "headers": {
        "Content-Type": "application/json;charset=gbk"
      }
    }
  },

  {
    "description": "模拟代参的post请求",
    "request": {
      "uri": "/postdomo",
      "method": "post",
      "forms": {
        "name": "huhansan",
        "age": "18"
      }
    },
    "response":{"text":"我胡汉三带着参数回来啦"
    }
  }
]

